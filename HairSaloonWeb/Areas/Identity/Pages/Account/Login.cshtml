@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex-1" style="background:rgb(34,45,250);background: linear-gradient(45deg, rgba(254,225,64,45%) 0%, rgba(250,112,154,45%) 100%);">
    <div class="container p-md-3 w-100" style="max-width:1000px;">
        <div class="d-flex flex-column-reverse row flex-md-row bg-white p-0 p-md-3 justify-content-center shadow-lg rounded-3">
            <div class="col col-md-6 p-3">
                <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Panel logowania</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Adres email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Hasło</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <span class="">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                    </div>
                    <div class="d-flex flex-column mt-4">
                        <p>
                            <a class="text-secondary" id="forgot-password" asp-page="./ForgotPassword">Zresetuj hasło</a>
                        </p>
                        <p>
                            <a class="text-secondary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nie posiadasz jeszcze konta? Zarejestruj się tutaj</a>
                        </p>
                        <p>
                            <a class="text-secondary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie maila z potwierdzeniem</a>
                        </p>
                    </div>
                </form>
            </div>
            <div class="bg-image bg-register-custom col col-md-6" style="min-height: 256px;">
                <h2>@* tekst *@</h2>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

